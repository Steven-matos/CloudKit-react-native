    "build": "bob build",
    "release": "release-it",
    "prepare": "bob build"
  },
  "keywords": [
    "react-native",
    "icloud",
    "cloudkit",
    "ios",
    "sync",
    "storage"
  ],
  "author": "Steven Matos",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/stevenmatos/react-native-icloud.git"
  },
  "bugs": {
    "url": "https://github.com/stevenmatos/react-native-icloud/issues"
  },
  "homepage": "https://github.com/stevenmatos/react-native-icloud#readme",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-native": ">=0.60.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native/babel-preset": "^0.73.0",
    "@react-native/eslint-config": "^0.73.0",
    "@react-native/metro-config": "^0.73.0",
    "@react-native/typescript-config": "^0.73.0",
    "@types/react": "^18.0.24",
    "@types/react-native": "^0.73.0",
    "eslint": "^8.19.0",
    "jest": "^29.2.1",
    "react-native-builder-bob": "^0.19.0",
    "typescript": "^4.8.4",
    "prettier": "^2.8.0"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
